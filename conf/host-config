# Shared config options for the narcissus host

export DISTRO="Angstrom"
export DISTRO_VERSION="$(date '+%Y.%m')-narcissus"
export TARGET_VENDOR="angstrom"

export WORKDIR="${PWD}"

export PATH=${WORKDIR}/bin:${PATH}

export CACHEDIR="${PWD}/deploy/cache"

export TARGET_DIR="${WORKDIR}/deploy/${MACHINE}/${IMAGENAME}"

export D="${TARGET_DIR}"

export OFFLINE_ROOT="${TARGET_DIR}"
export IPKG_OFFLINE_ROOT="${TARGET_DIR}"
export OPKG_OFFLINE_ROOT="${TARGET_DIR}"

export OPKG_CONFDIR_TARGET="${TARGET_DIR}/etc/opkg"
export PACKAGELISTFILE="${PWD}/deploy/${MACHINE}/${IMAGENAME}-packages.txt"

export IMAGE_ROOTFS="${TARGET_DIR}"

# 64MB is the default
export ROOTFS_SIZE="65536"

# SDK stuff

export SDK_DIR="${WORKDIR}/deploy/${MACHINE}/${IMAGENAME}"
export SDK_OUTPUT="${SDK_DIR}/image"
export SDK_OUTPUT2="${SDK_DIR}/image-extras"
export SDK_DEPLOY="${DEPLOY_DIR}/sdk"
export SDK_SUFFIX="toolchain"

export OPKG_HOST="opkg-cl -f ${OPKGCONF_SDK} -o ${SDK_OUTPUT}"
export OPKG_TARGET="opkg-cl -f ${OPKGCONF_TARGET} -o ${SDK_OUTPUT}/${SDKPATH}/${TARGET_SYS}"

export TOOLCHAIN_OUTPUTNAME="${DISTRO}-${DISTRO_VERSION}-${MACHINE}-${SDK_SUFFIX}"

# Proxy config
#export http_proxy=http://proxy.foo.com:80


